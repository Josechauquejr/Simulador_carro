        android:textAlignment="viewStart"
        android:textColor="#f5f5f5"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintEnd_toStartOf="@+id/txtAduaneiro"
